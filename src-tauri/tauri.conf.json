{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BeatBolt",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
				"execute": true
      },
			"notification" : {
				"all": true
			}, 
			"dialog": {
				"all": true
			},
			"path": {
				"all": true
			}
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.yvess.BeatBolt",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
			"macOS": {
				"entitlements": "./entitlements.plist"
			}
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "spotgui",
        "width": 800,
        "height": 600
      }
    ]
  }
}
